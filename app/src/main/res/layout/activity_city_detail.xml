<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_2x"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/city_name_text_size"
            android:layout_marginBottom="@dimen/margin_2x"
            android:layout_marginTop="@dimen/margin_2x" />

        <TextView
            android:id="@+id/tv_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_2x"
            android:layout_marginTop="@dimen/margin_2x" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_2x"
            android:layout_marginEnd="@dimen/margin_3x"
            android:layout_marginRight="@dimen/margin_2x"
            android:layout_marginStart="@dimen/margin_3x"
            android:layout_marginTop="@dimen/margin_2x" />

        <ImageView
            android:id="@+id/iv_city_image"
            android:layout_width="@dimen/city_image_height"
            android:layout_height="@dimen/city_image_height"
            android:contentDescription="City Image"
            android:scaleType="centerCrop" />

    </LinearLayout>
</ScrollView>